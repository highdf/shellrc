{
	"type": [
		"copy",
		"sed_insert",
		"sed_change"
	],
	"copy": {
		"field": [
			"kitty",
			"zathura",
			"waybar"
		],
		"kitty": [
			"~/.config/kitty/themes",
			"~/.config/kitty/themes/base.conf",
			[
				["Catppuccin/latte.conf", "Catppuccin/mocha.conf"],
				["Tokyo_Night/day.conf", "Tokyo_Night/moon.conf"]
			]
		],
		"zathura": [
			"~/.config/zathura/themes",
			"~/.config/zathura/themes/current.conf",
			[
				["Catppuccin/latte", "Catppuccin/mocha"]
			]
		],
		"waybar": [
			"~/.config/waybar/style",
			"~/.config/waybar/style/current.css",
			[
				["catppuccin-themes/latte.css", "catppuccin-themes/mocha.css"]
			]
		]
	},
	"sed_insert": {
		"field": [
			"tofi",
			"dunst",
			"hyprlock"
		],
		"tofi": [
			"~/.config/tofi/theme",
			"~/.config/tofi/config",
			[
				["Catppuccin/latte", "Catppuccin/mocha"]
			]
		],
		"dunst": [
			"~/.config/dunst/themes",
			"~/.config/dunst/dunstrc",
			[
				["Catppuccin/latte.conf", "Catppuccin/mocha.conf"]
			]
		],
		"hyprlock": [
			"~/.config/hypr/style",
			"~/.config/hypr/hyprlock.conf",
			[
				["Catppuccin/light", "Catppuccin/night"]
			]
		]
	},
	"sed_change": {
		"field": [
			"fcitx5",
			"hypr",
			"gtk"
		],
		"fcitx5": [
			"~/.config/fcitx5/conf/classicui.conf",
			[
				"Theme=ayaya-light",
				"Theme=ayaya-dark"
			]
		],
		"hypr": [
			"~/.config/hypr/Config/config.conf",
			[
				"\tcol.active_border = rgba(1e1e2eff) rgba(8839efff) 45deg",
				"\tcol.active_border = rgba(f9e2afff) rgba(1e66f5ff) 45deg"
			]
		],
		"gtk": [
			"~/.config/hypr/Config/basic.conf",
			[
				"env = GTK_THEME, Adwaita",
				"env = GTK_THEME, Adwaita-dark"
			]
		]
	}
}

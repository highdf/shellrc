include themes/current.conf

set font "JetBrainsMono Nerd Font normal 20"
set synctex true
set zoom-step 30

# [narmal]
map j scroll down
map k scroll up
map h scroll left
map l scroll right

map i zoom in
map o zoom out
map r zoom best-fit

map gg navigate home
map G navigate end
map f toggle_fullscreen
map <C-n> navigate next
map <C-p> navigate previous
map v toggle_page_mode
map cf change_mode fullscreen
# map ci change_mode index
map ca toggle_index

map q quit

# [fullscreen]
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] h scroll left
map [fullscreen] l scroll right

map [fullscreen] i zoom in
map [fullscreen] o zoom out
map [fullscreen] r zoom best-fit

map [fullscreen] gg navigate home
map [fullscreen] G navigate end
map [fullscreen] f toggle_fullscreen
map [fullscreen] v toggle_page_mode
map [fullscreen] <C-n> navigate next
map [fullscreen] <C-p>  navigate previous
map [fullscreen] <C-[>  abort

map [fullscreen] q quit

# [index]
map [index] j scroll down
map [index] k scroll up
map [index] h scroll left
map [index] l scroll right

map [index] i zoom in
map [index] o zoom out
map [index] r zoom best-fit

map [index] gg navigate home
map [index] G navigate end
map [index] f toggle_fullscreen
map [index] v toggle_page_mode
map [index] <C-n> navigate next
map [index] <C-p>  navigate previous
map [index] <C-[>  abort

map [index] q quit
